#include<iostream>
using namespace std;


int main(){

       	/*  
		Read input as specified in the question.
		Print output as specified in the question.
	*/
    int x,d=0,sum=0;
    cin>>x;
    if(x%2==0)
    {
    while(d<=x)
    {
        sum=sum+d;
        d=d+2;
       // cout<<sum;
    }
    }
    else if(x%2==1)
    {
        ++x;
    while(d<x)
    {
        sum=sum+d;
        d=d+2;
      //  cout<<sum;
    }
   // cout<<sum;
    }
    cout<<sum;
return 0;
    }
