#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
 int n,i=1,j,k,m;
    cin>>n;
    while(i<=n)
    {
        m=n-i;
        while(m>0)
        {
            cout<<" ";
            m--;
        }
        int j=1;
        while(j<=i)
        {
            cout<<"*";
            j++;
        }
        m=1;
        while(m<i)
        {
            cout<<"*";
            m++;
        }
        cout<<endl;
        i++;
    }
return 0;
}
