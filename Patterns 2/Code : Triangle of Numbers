#include <iostream>
using namespace std;

int main() {
    /*  Read input as specified in the question.
     * Print output as specified in the question.
     */
       int n,i=1,j;
    cin>>n;
    while(i<=n)
    {
        j=i;
        while(n>j)
        {
            cout<<" ";
            j++;
        }
        j=1;
        int k=i;
        while(j<=i)
        {
            cout<<k;
            j++;
            k++;
        }
        j=1;
        k=k-2;
        while(j<i)
        {
           // cout<<k;
            j++;
            while(k>=i)
            {
                cout<<k;
                k--;
            }
            
        }
        cout<<endl;
            i++;
        
    }
    return 0;
}
