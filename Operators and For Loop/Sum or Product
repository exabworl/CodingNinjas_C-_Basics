#include<iostream>
using namespace std;

int main() {
	// Write your code here
    int n,c;
    cin>>n>>c;
    if(c==1)
    {
        int sum=0;
        for(int i=1;i<=n;i++)
        {
            
            sum+=i;
            
        }
        cout<<sum;
    }
    else if(c==2)
    {
       long long int sum=1;
        for(int i=1;i<=n;i++)
        {
            
            sum*=i;
            
        }
        cout<<sum;
    }
    else
    {
        cout<<-1;
    }
    return 0;
}
